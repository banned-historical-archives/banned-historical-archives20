{"id":370905,"date":[{"year":1958,"month":6,"day":16}],"page":"3","source":"","region":"","masthead":"","special_issue":"笔会","column":"","genre":"","count":"324","ytitle":"","mtitle":"混身干劲顶破天","ftitle":"","authors":["莎白"],"text":[{"type":"paragraph","text":"莎白"},{"type":"paragraph","text":"一"},{"type":"paragraph","text":"心里想着总路线"},{"type":"paragraph","text":"混身干劲顶破天"},{"type":"paragraph","text":"炼炉钢里打得滚"},{"type":"paragraph","text":"万斤担子四两轻"},{"type":"paragraph","text":"二"},{"type":"paragraph","text":"想到十五年"},{"type":"paragraph","text":"心里蜜糖甜"},{"type":"paragraph","text":"大城小城不夜城"},{"type":"paragraph","text":"远村近村电气村"},{"type":"paragraph","text":"三"},{"type":"paragraph","text":"总路线是赶山鞭"},{"type":"paragraph","text":"荒山跪倒鞭下面"},{"type":"paragraph","text":"要它填海开步走"},{"type":"paragraph","text":"要它缴粮双手献"},{"type":"paragraph","text":"四"},{"type":"paragraph","text":"国家有了总路线"},{"type":"paragraph","text":"骏马配上追云鞭"},{"type":"paragraph","text":"一天胜过二十年"},{"type":"paragraph","text":"共产主义就在眼面前"},{"type":"paragraph","text":"五"},{"type":"paragraph","text":"心里有条总路线"},{"type":"paragraph","text":"能入地，能登天"},{"type":"paragraph","text":"敢下东海擒龙王"},{"type":"paragraph","text":"敢上西天斗金刚"},{"type":"paragraph","text":"六"},{"type":"paragraph","text":"万里长江架铁桥"},{"type":"paragraph","text":"江南江北成通道"},{"type":"paragraph","text":"总路线来是金桥"},{"type":"paragraph","text":"一头通到天堂腰"},{"type":"paragraph","text":"七"},{"type":"paragraph","text":"深更半夜锣鼓闹"},{"type":"paragraph","text":"厂长车间送喜报"},{"type":"paragraph","text":"机器也笑人也笑"},{"type":"paragraph","text":"总路线红旗心上飘"},{"type":"paragraph","text":"八"},{"type":"paragraph","text":"红字标题耀眼明"},{"type":"paragraph","text":"个个字儿栽在心"},{"type":"paragraph","text":"开红花，结红果"},{"type":"paragraph","text":"指标翻上南天门"},{"type":"paragraph","text":"九"},{"type":"paragraph","text":"总路线红旗插心中"},{"type":"paragraph","text":"十二级台风吹不动"},{"type":"paragraph","text":"脚下就像加了油"},{"type":"paragraph","text":"迴巡步子更轻松"},{"type":"paragraph","text":"手上就像吹过仙气"},{"type":"paragraph","text":"接个纱头半秒钟"},{"type":"paragraph","text":"脑袋变得灵又灵"},{"type":"paragraph","text":"革新窍门路路通"},{"type":"paragraph","text":"眼睛变得亮又亮"},{"type":"paragraph","text":"看见社会主义大厦平地耸"},{"type":"paragraph","text":"6月1日"}]}